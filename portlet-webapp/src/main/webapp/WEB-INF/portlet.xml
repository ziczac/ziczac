<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

   <portlet>
      <description>A simple TODO management</description>
      <portlet-name>ZicZac</portlet-name>
      <display-name>A simple TODO portlet</display-name>
      <portlet-class>org.t3.ziczac.ZicZacPortlet</portlet-class>

      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>VIEW</portlet-mode>
         <portlet-mode>EDIT</portlet-mode>
      </supports>

      <supported-locale>en</supported-locale>

      <portlet-info>
         <title>Simple TODO portlet</title>
         <short-title>TODO portlet</short-title>
      </portlet-info>
   </portlet>
</portlet-app>
